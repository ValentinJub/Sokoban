{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/main.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}", // Set the working directory here
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "C/C++: g++.exe build active file", // Reference the task from tasks.json
        "miDebuggerPath": "gdb",
        "externalConsole": true,
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }
  