{
"configurations": {
  "CodeLLDB": {
    "adapter": "CodeLLDB",
    "configuration": {
      "type":    "cdbg",
      "request": "launch",
      "program": "${workspaceRoot}/test",
      "args": [
        "-f",
        "-u", "unix.vim",
        "-U", "NONE",
        "--noplugin",
        "--not-a-term",
        "-S", "runtest.vim",
        "${Test}.vim"
      ],
      "cwd": "${workspaceRoot}",
      "environment": [
        { "name": "VIMRUNTIME", "value": "${workspaceRoot}/runtime" }
      ],
      "externalConsole": true,
      "stopAtEntry": true,
      "MIMode": "lldb",
      "logging": {
        "engineLogging": false
      }
    }
  }
}
}
